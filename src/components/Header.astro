---
import Link from './Link.astro';
import Navigation from './Navigation.astro';

const links = [
  {
    url: '/',
    title: '首页',
  },
  {
    url: '/about',
    title: '关于',
  },
  {
    url: '/blog',
    title: '博客',
  },
];
---

<header class="shadow-lg dark:bg-gray-900 py-12 md:py-16 lg:py-20">
  <div class="container mx-auto px-4 md:px-6 lg:px-8">
    <nav class="flex items-center justify-between mb-8">
      <div>
        <a
          class="no-underline text-black dark:text-white font-bold text-lg"
          href="/"
        >
          Mingeme
        </a>
      </div>
      <div class="flex space-x-4 items-center">
        <div class="flex">
          {links.map((link) => <Link url={link.url} title={link.title} />)}
        </div>
        <div class="flex items-center space-x-2">
          <div
            id="theme-btn"
            aria-label="Toggle dark mode"
            class="hover:bg-gray-700 focus:ring-2 focus:ring-gray-600 focus:outline-none rounded-full p-2 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="dark:hidden light:block h-5 w-5 text-black"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              strokeWidth="2"
              strokeLinecap="round"
              strokeLinejoin="round"
            >
              <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="dark:block light:hidden h-5 w-5 text-gray-400 hover:text-white"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              strokeWidth="2"
              strokeLinecap="round"
              strokeLinejoin="round"
            >
              <path
                d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"
              ></path>
            </svg>
          </div>
          <span class="text-gray-400 hover:text-white transition-colors"></span>
        </div>
      </div>
    </nav>
    <div class="mx-auto max-w-2xl text-center">
      <h1
        class="text-3xl font-bold text-black dark:text-white sm:text-4xl md:text-5xl"
      >
        Welcome to My Personal Blog
      </h1>
      <p class="mt-4 text-lg text-black dark:text-gray-400">
        Explore a collection of my thoughts, experiences, and insights.
      </p>
    </div>
  </div>
</header>
